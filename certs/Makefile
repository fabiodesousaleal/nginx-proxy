.PHONY: certs
certs:
	openssl genrsa -out ca.key 4096 && openssl req -new -x509 -key ca.key -out ca.crt -days 3650 -subj "/C=BR/ST=Tocantins/L=Araguaína/O=BaseTeste/OU=CA/CN=BaseTeste CA" && openssl req -new -key ca.key -out ca.csr -subj "/C=BR/ST=Tocantins/L=Araguaína/O=GitLab/OU=Server/CN=base-teste.ufnt.edu.br" && openssl x509 -req -in ca.csr -CA ca.crt -CAkey ca.key -out ca.pem -days 3650 && openssl crl2pkcs7 -nocrl -certfile ca.crt -out ca.pem